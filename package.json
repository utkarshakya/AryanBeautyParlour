{
  "name": "aryan-beauty-parlour",
  "version": "1.0.0",
  "description": "A full stack beauty parlour web application",
  "main": "index.js",
  "scripts": {
    "vite": "vite ./client --host",
    "tailwind": "npx @tailwindcss/cli -i ./client/src/styles/input.css -o ./client/src/styles/output.css --watch",
    "client": "concurrently --names \"VITE,TAILWIND\" --prefix-colors \"red,blue\" \"npm run vite\" \"npm run tailwind\"",
    "server": "nodemon ./server/server.js",
    "dev": "concurrently --names \"VITE,TAILWIND,NODEMON\" --prefix-colors \"red,blue,green\" \"npm run vite\" \"npm run tailwind\" \"npm run server\" --kill-others",
    "build": "vite build ./client"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "axios": "^1.8.4",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "framer-motion": "^12.6.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.13.1",
    "nodemailer": "^6.10.0",
    "razorpay": "^2.9.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.55.0",
    "react-router": "^7.5.0"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.3",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.9",
    "redis": "^4.7.0",
    "tailwindcss": "^4.1.3",
    "vite": "^6.2.6"
  }
}
